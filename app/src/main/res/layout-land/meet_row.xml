<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/roomColorDotCard"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/purple_200"
        >
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/textView_leader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="@integer/row_leader_ems"
        android:maxLines="1"
        android:paddingBottom="4dp"
        android:paddingStart="8dp"
        android:text="RÃ©union A - 14h00 - Pierre"
        app:tint="?attr/colorOnBackground"
        android:textSize="@dimen/row_meetList_leader"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/roomColorDotCard"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textview_mails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:ems="@integer/row_mail_ems"
        android:maxLines="1"
        android:text="pr.gailot@gmail.com, pr.gailot@gmail.com, pr.gailot@dsfdffffffffffffffffgmail.com"
        android:textSize="12dp"
        android:paddingStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/roomColorDotCard"
        app:layout_constraintTop_toBottomOf="@+id/textView_leader" />

    <ImageView
        android:id="@+id/meet_row_iv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_delete_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"
        app:tint="?attr/colorOnBackground" />



</androidx.constraintlayout.widget.ConstraintLayout>